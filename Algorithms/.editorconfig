root = true

[*]
# General settings for all files
indent_style = space
indent_size = 4
end_of_line = normal
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

dotnet_analyzer_diagnostic.severity = error
dotnet_diagnostic.severity = error
fsharp_diagnostic.severity = error
csharp_diagnostic.severity = error

dotnet_style_prefer_single_blank_line = true
dotnet_style_prefer_single_blank_line.severity = error

# CA1823: Avoid unused private fields
dotnet_diagnostic.CA1823.severity = none

# CA1805: Do not initialize unnecessarily
dotnet_diagnostic.CA1805.severity = none

# CA1303: Do not pass literals as localized parameters
dotnet_diagnostic.CA1303.severity = none

[*.{cs}]

# IDE0055
csharp_new_line_before_open_brace = all

# Use expression body for methods (IDE0022)
csharp_style_expression_bodied_methods = true

# 'var' preferences (IDE0007 and IDE0008)
csharp_style_var_for_built_in_types = false
csharp_style_var_when_type_is_apparent = true
sharp_style_var_elsewhere = true

# Add braces (IDE0011)
csharp_prefer_braces = when_multiline
